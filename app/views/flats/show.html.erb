<div class="map" style="background-image: url('<%= @flat.picture_url %>'); height: 400px; background-size: cover;"></div>
<div class="container margin-top-negative p-5">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&amp;zoom=13&amp;scale=2&amp;size=1000x1000&amp;maptype=roadmap&amp;markers=color:red%7C<%= @flat.address %>&amp;key=AIzaSyAPpx0wk4d-AQ8bhe8-a-ihC7NXLoPElhg')"></div>
      </div>
    </div>


  <div class="col-4">
    <div class="flat-show-card">
      <h5>Book this place!</h5>
      <form action="">
        <div class="input-group flex">
          <span class="input-group-text" id="start-date-label">From:</span>
          <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
        </div>

        <div class="input-group mt-2 flex">
          <span class="input-group-text" id="end-date-label">To:</span>
          <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
        </div>

        <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
      </form>
    </div>

    <div class="flat-show-card">
      <h3>Details</h3>
      <div class="flex">
        <div class="flex"><%= @flat.number_of_guests %></div>
        <div class="flex ms-3"><%= @flat.price_per_night %></div>
      </div>
    </div>

    <div class="flat-show-card">
      <div class="flex-align flex">
        <h6 class="no-mb">Share</h6>
        <div class="flex">
          <i class="fa-brands fa-facebook-square me-2"></i>
          <i class="fa-brands fa-twitter-square me-2"></i>
          <i class="fa-brands fa-pinterest-square me-2"></i>
        </div>
      </div>
    </div>
  </div>
</div>
