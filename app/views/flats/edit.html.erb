<div class="col-6 m-auto p-5">
  <div class="flat-form">
    <h1>Modify Flat</h1>
    <div class="mt-3">
      <%= simple_form_for(@flat) do |f| %>
        <%= f.input :name, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :address, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :picture_url, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :description, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :price_per_night, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.input :number_of_guests, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <%= f.button :submit, "Modify Flat", class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
